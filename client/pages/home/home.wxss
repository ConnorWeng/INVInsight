/* pages/home/home.wxss */

.container{
  align-self: center;
  height: 100%;
  width: 100%;

  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 店铺名称 */
.title{
  margin-top: 3%;
  font-size: 32rpx;
}


/* 用户头像信息 */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top:20rpx;
}

.ahead{
  display: flex;
  width: 120rpx;
  height: 120rpx;
  align-items: center;
  flex-direction:column;  
  justify-content: flex-start;  
  border: 0rpx;
}

.userinfo-avatar {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}


/* 手动入库选项 */
.options{
  width:100%;
  height: 360rpx;
}

.options-bg{
  width:100%;
  position: absolute;   
  height: 360rpx;
}

.manual-options{
  position: absolute;   
  align-items: center;
  text-align: center;  
  width: 100%; 
}

.options-tip{
  display:block;
  padding-top:60rpx;

}

.manual{
  display: flex;
  flex-direction:row;  
  justify-content: flex-start;  
  width:80%;
  margin: auto;
  margin-top:20rpx;
}

.photo{
  width:42%;
  padding-bottom: 30%;   
  height:0;
  background-color: #42B9CF;
}

.photo image{
  width:50rpx;
  height:50rpx; 
  display: block;
  margin: auto;
  margin-top: 20%;
}

.photo text{
  color:white;
  font-size: 35rpx;
  display: block;
  margin-top:-10rpx;
}

.speak{
  width:42%;
  padding-bottom: 30%;  
  height:0;
  background-color: #2D6DA4;
}

.speak image{
  width:50rpx;
  height:50rpx; 
  display: block;
  margin: auto;
  margin-top: 20%;
}

.speak text{
  color:white;
  font-size: 35rpx;
  display: block;
  margin-top:-10rpx;
}

/* 最新库存列表 */
.list{

}

.list-head{
  margin-top:30rpx;
  width:90%;
  /* border: 1rpx solid red; */
  vertical-align: middle;
}

.list-head text{
  display: block;
  float:left;
  font-size: 12pt;
  padding-top: 10rpx;
}

.list-head input{
  display: block;
  float:right;
  font-size: 8pt;
  text-align: center;
	border: 1px solid rgba(181,178,178,0.4);
	border-radius: 20rpx;
  line-height: 1.58823529em;
  box-sizing: border-box;	
  height: 70rpx;
  width: 150rpx;

}

.list-body{
  width:90%;
  margin-top: 30rpx;
}

.list-tab{
  display: flex;
  flex-direction:row;  
  justify-content: flex-start;  
	border-radius: 10px;
	background-color: #FFFFFF;
  border: rgba(181,178,178,0.5) 1rpx solid;
	box-shadow: 0 1px 20px 0 rgba(181,178,178,0.2);
  height: 150rpx;
  padding-left: 5rpx; 
  /* padding-right: 10rpx;   */
  align-items: center;
  margin-bottom: 10rpx;
}

.list-tab-image{
  width: 100rpx;
  height: 110rpx;
  overflow: hidden;
  text-align: center;

}

.list-tab-image image{
  min-height: auto;
  width: 95rpx;
  max-height: 100%;
}

.list-tab-content{
  display: flex;
  flex-direction:column;  
  justify-content: flex-start;  
  height: 104rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  /* margin-top: 10rpx; */
  /* white-space: nowrap; */
  padding: 8rpx;
  width: 70%;

}

.list-tab-text1{
  display: block;
}

.list-tab-text2{
  display: block;
  font-size: 8pt;
}

.list-tab-operate{
  vertical-align: middle;
  width: 20%;
}

.list-tab-operate button{
  width: 110rpx; 
  height: 60rpx;
  background-color: white;    
}

.mini-btn1{
  margin-top: 10rpx; 
}

