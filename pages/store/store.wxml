<!--pages/store/store.wxml-->
<view class="container">
  <view class="myToast" hidden="{{nullHouse}}">{{toast}}</view>
  <!--店铺名称-->
  <view class="title" wx:if="{{storeInfo}}">
    <text class="title-market">{{storeInfo.market_name}} : </text>
    <text class="title-store">{{storeInfo.store_name}}</text>
  </view>
  <view class="title" wx:else>
    <text class="title-market">市场 : </text>
    <text class="title-store">店铺</text>
  </view>

  <!--用户头像信息-->
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo" class="ahead"> 
    <image class="userinfo-avatar" src="../common/image/head.png" ></image>
   </button>
    <block wx:else>
      <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    </block>
  </view>

  <!--背景图-->
  <view class="bg" >
    <image src="../common/image/second-bg@3x.png" class="image-bg" ></image>
  </view>

  <!--最新库存列表-->

  <view class="list">
    <view class="list-head">
      <input  style="width:{{inputWidth}}" bindinput="detectInput" placeholder="款号..." bindfocus="inputFocus" bindblur="inputBlur" bindconfirm="inputConfirm" value="{{searchValue}}"/>
    </view>

    <view class="list-body" wx:if="{{hasResult}}">

        <view class="list-tab" >
          <view class="list-tab-image">
            <image src="{{result.stock.product.thumbnail}}" wx:if="{{result.stock.product.thumbnail}}"></image>
            <image src="../common/image/cloth0.png" wx:else></image>
          </view>

          <view class="list-tab-content">
            <view class="list-tab-content1">
              <text class="list-tab-text1"> {{result.stock.product.product_code}}</text>
            </view>
            <view class="list-tab-content2">
              <text class="list-tab-text2"> 入：{{result.summary.in?result.summary.in:0}}</text>
              <text class="list-tab-text2"> 出：{{result.summary.out?result.summary.out:0}}</text>
            </view>
          </view>

        </view>
    </view>

    <view class="list-body" wx:elif="{{stocks.length == 0}}">
      <nodata content="{{content}}"></nodata>
    </view>

    <view class="list-body" wx:else>

      <block wx:for="{{stocks}}" >
        <view class="list-tab">
          <view class="list-tab-image">
            <image src="{{item.thumbnail}}" wx:if="{{item.thumbnail}}"></image>
            <image src="../common/image/cloth0.png" wx:else></image>
          </view>

          <view class="list-tab-content">
            <view class="list-tab-content1">
              <text class="list-tab-text1"> {{item.product_code}}</text>
            </view>
            <view class="list-tab-content2">
              <text class="list-tab-text2"> 入：{{item.in?item.in:0}}</text>
              <text class="list-tab-text2"> 出：{{item.out?item.out:0}}</text>
            </view>
          </view>

        </view>
      </block>

    </view>

  </view>


</view>
