/* pages/findstock/findstock.wxss */

page{
	height: 100%;
	background-color:#efefef;
}

.container{
	width: 100%;
	background-color:white;
}


.myToast {
    width:240rpx;
	height:80rpx;
	line-height:78rpx;
	margin:386rpx 1%;
	border-radius:8rpx;
	background-color:rgb(114, 113, 113);
	color:rgb(255, 255, 255);
	font-size:30rpx;
	text-align:center;
	position:absolute;
	z-index:1000;
	opacity:0.95;

}


.head{
	display: flex;
	justify-content: flex-start; 
	align-items:center;
 	width: 100%;
 	/*margin-top:15rpx;*/
 	background-color:white;
 	position:fixed;
 	z-index:999;
 	margin-left:4%;
 	padding-top:15rpx;
	padding-bottom:30rpx;
}

.head-content{
	background-color: #efefef;
	display: flex;
	justify-content: flex-start;  
	align-items:center;
	width:76%;
	height:68rpx;
	border-radius:5rpx;



}
.head-image{
	width: 34rpx;
	height:34rpx;
	background-color: #efefef;
	padding-left:15rpx;

}

.head-input{
	background-color:#efefef;
	font-size: 29rpx;
	padding-left:15rpx;
	width:80%;
	border-radius:5rpx;


}

.head-close{
	width: 30rpx;
	height:30rpx;
	background-color: #efefef;
	padding:14rpx;

}

.head-search{
	font-size:32rpx;
	padding-left:36rpx;
	color:#a1a1a1;
	padding-top:18rpx;
	padding-bottom:18rpx;
	width:15%;

}

.body{
	width: 100%;
	background-color:white;
	display: flex;
	justify-content:center;

}


/* ready状态的搜索历史记录展示容器*/
.histroy{
	width: 92%;
	background-color:white;
	margin-top:136rpx;
	margin-bottom:30rpx;

}

.history-head{
	display: flex;
	justify-content:space-between;
	border-bottom: 1px solid rgba(181, 178, 178, 0.4);
	padding-bottom:18rpx;
}

.history-title{
	font-size: 29rpx;
	color:#818181;

}

.history-delete{
	height:40rpx;
	width:82rpx;
	display:flex;
	justify-content:flex-end;
	align-items:center;

}

.delete-image{
	width: 36rpx;
	height: 36rpx;
}

.history-content{
	display: flex;
	flex-wrap:wrap;
	justify-content: flex-start;
}

.preview-item{
	margin-top: 24rpx;
	font-size: 24rpx;
	color:#818181;
	border: 1px solid rgba(181, 178, 178, 0.4);
	padding:10rpx 24rpx;
	margin-right:20rpx;


}

.detail-item{
	margin-top: 24rpx;
	display: flex;
	align-items:center;
	justify-content: center;
	border: 1px solid rgba(181, 178, 178, 0.4);
	padding:10rpx 24rpx;
	margin-right:20rpx;

}

.item-name{
	font-size: 24rpx;
	color:#818181;
	padding-left:6rpx;

}

.item-icon{
	width: 36rpx;
	height: 36rpx;

}

/*doing状态的预处理搜索界面*/
.quick-search{
	display: flex;
	width: 92%;
	justify-content: left;
	flex-direction: column;
	margin-top:100rpx;


}

.quick-item{
	display: flex;
	justify-content: left;
	align-items: center;
	margin-top:6rpx;
	padding:21rpx 0;
	border-bottom:1px dotted rgba(181, 178, 178, 0.4);

}

.quick-item-image{
	width: 36rpx;
	height: 36rpx;
	padding-right:5px;

}

.quick-item-title{
	font-size: 28rpx;
	padding-right:31rpx;
	color:#222;


}

.quick-item-number{
	font-size: 24rpx;
	color:#777;

}


/* done状态下的搜索结果界面 ： 库存列表 */

.search-result {
    width: 90%;
    margin-top: 130rpx;
    margin-bottom: 32rpx;
}
.list-tab {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    border-radius: 10px;
    background-color: #FFFFFF;
    border: rgba(181, 178, 178, 0.5) 1rpx solid;
    box-shadow: 0 1px 20px 0 rgba(181, 178, 178, 0.2);
    height: 150rpx;
    padding-left: 5rpx;
    /* padding-right: 10rpx;   */
    align-items: center;
    margin-bottom: 10rpx;
}
.list-tab-image {
    width: 100rpx;
    height: 110rpx;
    overflow: hidden;
    text-align: center;
}
.list-tab-image image {
    min-height: auto;
    width: 95rpx;
    max-height: 100%;
}
.list-tab-content {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    height: 104rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    /* margin-top: 10rpx; */
    /* white-space: nowrap; */
    padding: 8rpx;
    width: 48%;
}
.list-tab-text1 {
    display: block;
}
.list-tab-text2 {
    display: block;
    font-size: 10pt;
}
.list-tab-operate {
    vertical-align: middle;
    width: 20%;
}
.list-tab-operate button {
    width: 125rpx;
    height: 63rpx;
    background-color: white;
}
.mini-btn1 {
    margin-top: 11rpx;
}
.mini-btn2 {
    margin-top:4rpx;
}
.detail {
    margin-left: 9rpx;
    background-color: #40bacf;
    width: 90rpx;
    height: 150rpx;
    border: rgba(181, 178, 178, 0.5) 1rpx solid;
    border-bottom-right-radius: 10px;
    border-top-right-radius: 10px;
    filter: alpha(opacity=100);
    -moz-opacity: 1;
    -khtml-opacity: 1;
    opacity: 1;
    display: flex;
    flex-direction: column;
}
.detail-image {
    width: 25px;
    height: 25px;
    margin:auto;
}