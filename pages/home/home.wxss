/* pages/home/home.wxss */
@import '../common/lib/weui.wxss';
.container{
  align-self: center;
  height: 100%;
  width: 100%;

  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 店铺名称 */
.title{
  margin-top: 3%;
  font-size: 32rpx;
}


/* 用户头像信息 */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top:20rpx;
}

.ahead{
  display: flex;
  width: 120rpx;
  height: 120rpx;
  align-items: center;
  flex-direction:column;  
  justify-content: flex-start;  
  border: 0rpx;
}

.userinfo-avatar {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}


/* 手动入库选项 */
.options{
  width:100%;
  height: 360rpx;
}

.options-bg{
  width:100%;
  position: absolute;   
  height: 360rpx;
}

.manual-options{
  position: absolute;   
  align-items: center;
  text-align: center;  
  width: 100%; 
}

.options-tip{
  display:block;
  padding-top:60rpx;

}

.manual{
  display: flex;
  flex-direction:row;  
  justify-content: flex-start;  
  width:80%;
  margin: auto;
  margin-top:20rpx;
}

.photo{
  width:42%;
  padding-bottom: 30%;   
  height:0;
  background-color: #42B9CF;

  /*display: flex;
  flex-direction: column;
  align-items: center;*/
}

.photo image{
  width:50rpx;
  height:50rpx; 
  display: block;
  margin: auto;
  margin-top: 20%;
}

.photo text{
  color:white;
  font-size: 35rpx;
  display: block;
  margin-top:-10rpx;
}

.photo-input{
  border-radius:12rpx;
  background:white;
  width:100%;
  margin-top:12%;
  font-size:8pt;
  text-align:left;
  padding-left:6%;
  height:30px;
  margin-left:-5rpx;
  color:black;

}

.photo-operate{
  width:111%;
  height:64rpx;
  display:flex;
  margin-left:-9rpx;
  margin-top:10rpx;
  

}

.photo-mini-btn1{
  background-color:#FFF;
  z-index: 100;
}

.photo-mini-btn2{
  background-color:#FFF;
  z-index: 100;
}

.speak{
  width:42%;
  padding-bottom: 30%;  
  height:0;
  background-color: #2D6DA4;
}

.speak image{
  width:50rpx;
  height:50rpx; 
  display: block;
  margin: auto;
  margin-top: 20%;
}

.speak text{
  color:white;
  font-size: 35rpx;
  display: block;
  margin-top:-10rpx;
}

/* 最新库存列表 */
.list {}
.list-head {
    margin-top: 30rpx;
    width: 90%;
    /* border: 1rpx solid red; */
    vertical-align: middle;
}
.list-head text {
    display: block;
    float: left;
    font-size: 12pt;
    padding-top: 14rpx;
}
.list-head input {
    display: block;
    float: right;
    font-size: 8pt;
    text-align: center;
    border: 1px solid rgba(181, 178, 178, 0.4);
    border-radius: 20rpx;
    line-height: 1.58823529em;
    box-sizing: border-box;
    height: 70rpx;
    width: 150rpx;
}


.list-head .all{
  width:36px;
  height: 36px;
  float: right;
  margin-right:14rpx;

}

.list-body {
    width: 90%;
    margin-top: 25rpx;
}
.list-tab {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    border-radius: 10px;
    background-color: #FFFFFF;
    border: rgba(181, 178, 178, 0.5) 1rpx solid;
    box-shadow: 0 1px 20px 0 rgba(181, 178, 178, 0.2);
    height: 150rpx;
    padding-left: 5rpx;
    /* padding-right: 10rpx;   */
    align-items: center;
    margin-bottom: 10rpx;
}
.list-tab-image {
    width: 100rpx;
    height: 110rpx;
    overflow: hidden;
    text-align: center;
}
.list-tab-image image {
    min-height: auto;
    width: 95rpx;
    max-height: 100%;
}
.list-tab-content {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    height: 104rpx;
    overflow: hidden;
    text-overflow: ellipsis;
     margin-top: 8rpx; 
    /* white-space: nowrap; */
    padding: 8rpx;
    width: 48%;
}
.list-tab-text1 {
    display: block;
}
.list-tab-text2 {
    display: block;
    font-size: 10pt;
    margin-top:6rpx;

}
.list-tab-operate {
    vertical-align: middle;
    width: 20%;
    margin-right: 3rpx;
}
.list-tab-operate button {
    width: 125rpx;
    height: 63rpx;
    background-color: white;
}
.list-mini-btn1 {
    margin-top: 15rpx;
}
.list-mini-btn2 {
    margin-top:-2rpx;
}
.detail {
    margin-left: 9rpx;
    background-color: #40bacf;
    width: 90rpx;
    height: 150rpx;
    border: rgba(181, 178, 178, 0.5) 1rpx solid;
    border-bottom-right-radius: 10px;
    border-top-right-radius: 10px;
    filter: alpha(opacity=100);
    -moz-opacity: 1;
    -khtml-opacity: 1;
    opacity: 1;
    display: flex;
    flex-direction: column;
}
.detail-image {
    width: 25px;
    height: 25px;
    margin:auto;
}

.navigator{
  width: 100%;
}

.more{
  text-align:center;
  font-size:11pt;
  padding-top:14rpx;
  color:#999;

}

