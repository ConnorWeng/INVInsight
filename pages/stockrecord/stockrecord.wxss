/* pages/stockrecord/stockrecord.wxss */

page, .page, .page-bd{
    height: 100%;
}
.page-bd{
    padding-bottom: 0;
}

.tab{
	position:relative;
	height:100%;

}

.navbar{
	display:-webkit-box;
	position:absolute;
	z-index:500;
	top:0;
	width:100%;
	border-bottom:1rpx solid #ccc;
	background-color: white;
}

.navbar-item{
	position:relative;
	display:block;
	-webkit-box-flex:1;
	-webkit-flex:1;
	flex:1;
	padding:13px 0;
	text-align:center;
	font-size:0;
	width:33%;


}

.navbar-item .bar-item-on{
	color:#1aad19;

}

.navbar-title{
	display:inline-block;
	font-size:15px;
	max-width:8em;
	width:auto;
	overflow:hidden;
	text-overflow:ellipsis;
	white-space:nowrap;
	word-wrap:normal;

}

.slider{
	position:absolute;
	content:" ";
	left:0;
	bottom:0;
	width:6em;
	height:3px;
	/*background-color:#1aad19;*/
	background-color:#40bacf;
	-webkit-transition:-webkit-transform .3s;
	transition:-webkit-transform .3s;

}

.tab-panel{
	box-sizing:border-box;
	height:100%;
	padding-top:0px;
	overflow:auto;
	-webkit-overflow-scrolling:touch;
	width:100%;

}

.tab-content{
	padding-top:60px;
	text-align:center;


}

.tab-content{
    padding-top: 60px;
    text-align: center;
}

.time{
	width: 100%;
	display: flex;
	align-items: center;
	justify-content:center;
}

.time-content{
	font-size: 10px;
	color:white;
	background-color: #bbb;
	padding: 5rpx;
	width: 30%;
	-webkit-border-radius:20rpx;
	border-radius:10rpx;
	opacity:0.8;
	filter:alpha(opacity=80); 
	-moz-opacity:0.8; 
	-khtml-opacity: 0.8; 


}

.content{
	margin-top: 5rpx;
	vertical-align: middle;
	font-size:14px;
	margin-bottom:32rpx;
	text-align:left;
	margin-left:10%;

}

.content image{
	width: 48rpx;
	height: 48rpx;
	vertical-align: middle;
	margin-right: 15rpx;
}

.main{
	color:#40bacf;
}

.person{
	font-size: 11px;
	color: #888;
	font-style: italic;
	padding-left: 20rpx;
}

.line{
	width: 90%;
	border-bottom: 1px dotted rgba(181, 178, 178, 0.4);
	margin:0 auto;
	margin-bottom: 20rpx;

}