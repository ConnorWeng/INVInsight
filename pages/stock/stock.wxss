/* pages/stock/stock.wxss */

@import '../common/lib/weui.wxss';
.container {
    align-self: center;
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}
/* 库存列表 */

.list {}
.list-head {
    margin-top: 30rpx;
    width: 90%;
    /* border: 1rpx solid red; */
    vertical-align: middle;
}
.list-head text {
    display: block;
    float: left;
    font-size: 12pt;
    padding-top: 10rpx;
}
.list-head input {
    display: block;
    float: right;
    font-size: 8pt;
    text-align: center;
    border: 1px solid rgba(181, 178, 178, 0.4);
    border-radius: 20rpx;
    line-height: 1.58823529em;
    box-sizing: border-box;
    height: 70rpx;
    width: 150rpx;
}
.list-body {
    width: 90%;
    margin-top: 30rpx;
}
.list-tab {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    border-radius: 10px;
    background-color: #FFFFFF;
    border: rgba(181, 178, 178, 0.5) 1rpx solid;
    box-shadow: 0 1px 20px 0 rgba(181, 178, 178, 0.2);
    height: 150rpx;
    padding-left: 5rpx;
    /* padding-right: 10rpx;   */
    align-items: center;
    margin-bottom: 10rpx;
}
.list-tab-image {
    width: 100rpx;
    height: 110rpx;
    overflow: hidden;
    text-align: center;
}
.list-tab-image image {
    min-height: auto;
    width: 95rpx;
    max-height: 100%;
}
.list-tab-content {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    height: 104rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    /* margin-top: 10rpx; */
    /* white-space: nowrap; */
    padding: 8rpx;
    width: 48%;
}
.list-tab-text1 {
    display: block;
}
.list-tab-text2 {
    display: block;
    font-size: 10pt;
}
.list-tab-operate {
    vertical-align: middle;
    width: 20%;
}
.list-tab-operate button {
    width: 125rpx;
    height: 63rpx;
    background-color: white;
}
.mini-btn1 {
    margin-top: 15rpx;
}
.mini-btn2 {
    margin-top:-3rpx;
}
.detail {
    margin-left: 9rpx;
    background-color: #40bacf;
    width: 90rpx;
    height: 150rpx;
    border: rgba(181, 178, 178, 0.5) 1rpx solid;
    border-bottom-right-radius: 10px;
    border-top-right-radius: 10px;
    filter: alpha(opacity=100);
    -moz-opacity: 1;
    -khtml-opacity: 1;
    opacity: 1;
    display: flex;
    flex-direction: column;
}
.detail-image {
    width: 25px;
    height: 25px;
    margin:auto;
}

