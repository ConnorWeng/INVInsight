<!--pages/stockdetail/stockdetail.wxml-->

<view class="container">

	<!--操作记录-->
	<view class="record" bindtap="checkRecord">操作记录</view>

	<!--库存信息概览-->
	<view class="overview ">
		<view class="code">款号：{{code}}</view>
		<view class="stockin-number">入库：{{result.summary.in}} </view>
		<view class="total">库存：{{result.stock.stock_amount}}</view>
		<view class="stockout-number">出库：{{result.summary.out}}</view>
	</view>

	<!--详情-->
	<view class="detail">
		<view class="detail-title">详情</view>
		<view class="detail-content" wx:if="{{!result.stock.skus || result.stock.skus.length == 0}}">
			<nodata content=""></nodata>
		</view>
		<view class="detail-content" wx:else>
			<block wx:for="{{result.stock.skus}}">
				<view class="detail-item">
					<view class="item-content">{{item.color}} , {{item.size}}</view>
					<view class="item-number">库存量：{{item.stock_amount}}</view>
				</view>
			</block>
		</view>
	</view>

	<!--出入库操作-->
	<view class="operate">
		<button class="stockin" hover-class="button-hover" bindtap="stockin">入库</button>
		<button class="stockout" hover-class="button-hover" bindtap="stockout">出库</button>
	</view>

</view>

