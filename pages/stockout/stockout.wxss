/* pages/stockout/stockout.wxss */

/*@import '../common/lib/weui.wxss';*/

.container{
    width:100%;
    display:flex;
    flex-direction:column;
    

}

.title{
    width:92%;
    margin:0 auto;
    margin-top:28rpx;
    font-size: 32rpx;
    display: flex;
    align-self:flex-start;

}

.code{
    font-size: 30rpx;
}


.outform{
    width: 100%;
    /*border: 1px red solid;*/
    display: flex;
    flex-direction: column;
    margin:15rpx 0;


}

.form-section{
    width: 92%;
    display: flex;
    align-items: center;
    /*border:1px red solid;*/
    margin:0 auto;
    margin-bottom: 200rpx;
}

.checkbox{
    width:100%;

    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top:22rpx;
    flex-wrap:wrap;
    padding-bottom:18rpx;
    /*border: 1px blue solid;*/
    border-bottom:1px dotted rgba(181, 178, 178, 0.3);

}

.checkbox checkbox{
    /*border:1px red solid;*/
    width:60%;
    position: absolute;

}

.main-content{
    width:70%;
    display:flex;
    flex-wrap:wrap;
    align-items:center;
    font-size: 32rpx;
    /*border:1px green solid;*/
}

.sku{
    /*border:1px yellow solid;*/
    word-break: break-all; 
    word-wrap:break-word;
    margin-left:13%;

}

.total{
    /*border:1px black solid;*/
    word-break: break-all; 
    word-wrap:break-word;
    font-size:28rpx;
    color:#888888;
    padding-left:12rpx;

}

.number{
    width:30%;
    display:flex;
    align-items:center;
    justify-content:center;

    /*border:1px red solid;*/
}

.number input{
    width: 28%;
    /*border:1px red solid;*/
    padding-left:12rpx;
    border:1px solid rgba(181, 178, 178, 0.3);
    border-radius: 8rpx;
    height:57rpx;
    margin:0 5rpx;

}

.minus {
    width: 65rpx;
    height: 65rpx;
}
.add {
    width: 65rpx;
    height: 65rpx;
}

.btn-area{
	margin-top: 46px;
    z-index: 999;
    align:center;
    position: fixed;
    bottom: 0;
    border: 1px red solid;
    width: 100%;
    height:135rpx;
    background-color: white;
    border:1px solid rgba(181, 178, 178, 0.3);
}
.btn {
    
    width: 90%;
    margin-top:18rpx;
    color:grey;
	background-color:white;
    /*border:1px solid rgba(181, 178, 178, 0.3);*/
    z-index: 1000;


}

.button-hover{
    opacity: 0.5;
}